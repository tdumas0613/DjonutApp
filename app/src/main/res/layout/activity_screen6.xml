<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.teamawesome.djonutapp.Screen6">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="700dp"
        android:layout_height="100dp"
        android:foregroundTint="#fcb525"
        android:textColor="#ffffff"
        android:typeface="normal"
        android:id="@+id/editText3"
        android:textSize="60dp"
        android:background="#fcb525"
        android:textColorHint="#ffffff"
        android:gravity="center"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2"
        android:layout_marginBottom="119dp" />

    <EditText
        android:layout_width="700dp"
        android:layout_height="100dp"
        android:hint="NAME"
        android:editable="false"
        android:foregroundTint="#fcb525"
        android:textColor="#d13339"
        android:typeface="normal"
        android:id="@+id/editText4"
        android:textSize="60dp"
        android:textColorHint="#ffffff"
        android:gravity="center_horizontal"
        android:layout_alignTop="@+id/imageView2"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:text="SWEET SUCCESS!"
        android:textAlignment="center"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back To Menu"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editText4"
        android:layout_alignEnd="@+id/editText4"
        android:textColor="#ffffff"
        android:background="#d13339"
        android:textSize="30dp"
        android:onClick="jumpToMenu"/>

</RelativeLayout>
